<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NameTextViewStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="AboutTextViewStyle">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="LabelsDefaultStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="helperText">required*</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/teal_700</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/teal_700</item>
    </style>

    <style name="ButtonDefaultTeal" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/default_teal</item>
    </style>
</resources>